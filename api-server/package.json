{
  "name": "express-api-server-boilerplate",
  "version": "0.0.1",
  "author": "Patrik Staš",
  "description": "Express API Boilerplate by Patrik Staš.",
  "main": "src/index.js",
  "scripts": {
    "tag": "git tag `cat package.json | jq -r .version`",
    "lint": "standard",
    "start": "babel-node src/index.js",
    "dev": "nodemon --exec babel-node --watch ./src src/index.js",
    "build": "npm run lint && babel src -d dist",
    "serve": "npm run build && node dist/index.js",
    "test:unit": "jest test/unit",
    "clean:logs": "rimraf logs"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.0.0",
    "@types/jest": "^24.0.11",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.7.1",
    "eslint": "5.16.0",
    "eslint-loader": "^2.1.2",
    "express-swagger-generator": "^1.1.14",
    "jest": "^24.8.0",
    "jest-html-reporter": "2.4.3",
    "joi": "^14.3.1",
    "nodemon": "^1.18.10",
    "rimraf": "^2.6.3",
    "standard": "^12.0.1",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.2.1",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@types/node": "^8.0.47",
    "@types/node-persist": "0.0.33",
    "@types/ref": "0.0.28",
    "@types/ref-struct": "0.0.28",
    "body-parser": "^1.18.3",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-prettify": "^0.1.1",
    "express-validation": "^1.0.2",
    "fs-extra": "^4.0.2",
    "lodash": "^4.17.11",
    "uuid": "^3.3.2",
    "winston": "^3.2.1",
    "write": "^1.0.3"
  }
}
